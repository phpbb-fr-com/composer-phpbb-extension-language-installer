{
    "name": "phpbbfr/phpbb-extension-language-installer",
    "type": "composer-plugin",
    "description": "A composer plugin, to install phpbb-extension-language composer packages in ext/{vendor-name/extension-name}/language/{iso_code} directory instead of the default composer installation path which is in the vendor folder",
    "version": "1.0.0",
    "keywords": [
        "composer",
        "plugin",
        "phpbb",
        "extension",
        "language"
    ],
    "license": "GPLv2",
    "authors": [
        {
            "name": "Zoddo",
            "email": "zoddo@phpbb-fr.com"
        },
        {
            "name": "phpBB-fr.com website team",
            "email": "site@phpbb-fr.com",
            "homepage": "http://www.phpbb-fr.com/go/website-team"
        }
    ],
    "require": {
        "php": ">=5.3",
        "composer-plugin-api": "*"
    },
    "require-dev": {
        "composer/composer": "~1.10"
    },
    "autoload": {
        "psr-0": {
            "phpbbfr\\PhpbbExtensionLanguageInstaller": "src/"
        }
    },
    "extra": {
        "class": "phpbbfr\\PhpbbExtensionLanguageInstaller\\Plugin"
    }
}
